<Window x:Class="ReDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:ReDo.ViewModels"
        xmlns:converters="clr-namespace:ReDo.Converters"
        mc:Ignorable="d"
        Title="ReDo - Record and Playback"
        MinWidth="380" MinHeight="420" Width="550" Height="480"
        WindowStartupLocation="Manual"
        Background="{StaticResource SurfaceBrush}"
        TextElement.Foreground="{StaticResource TextPrimaryBrush}"
        TextElement.FontFamily="Segoe UI"
        TextElement.FontSize="14">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="8" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="4" ShadowDepth="2" Opacity="0.15" Color="Black"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryPressedBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <StackPanel x:Key="PlayPauseBtnCollection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Path Width="20" Height="20" Stretch="Uniform" Fill="White"
                     Data="{Binding BtnData.btnPath}" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBlock Text="{Binding BtnData.btnName}" FontSize="14" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1"/>
            </Grid>
        </StackPanel>

        <StackPanel x:Key="StopBtnCollection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Path Width="20" Height="20" Stretch="Uniform" Fill="White"
                     Data="{Binding BtnStop.btnPath}" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBlock Text="{Binding BtnStop.btnName}" FontSize="14" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1"/>
            </Grid>
        </StackPanel>

        <StackPanel x:Key="PlaybackBtnCollection">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Path Width="20" Height="20" Stretch="Uniform" Fill="White"
                     Data="{Binding BtnPlayback.btnPath}" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBlock Text="{Binding BtnPlayback.btnName}" FontSize="14" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="10,0,0,0" Grid.Column="1"/>
            </Grid>
        </StackPanel>

        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <DataTemplate x:Key="RecordedStepTemplate" DataType="{x:Type viewModels:RecordedStepViewModel}">
            <Border Background="#F1F5F9" CornerRadius="6" Padding="12,8" Margin="0,0,0,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Index}" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,12,0"
                               VerticalAlignment="Center" MinWidth="20"/>
                    <Border Grid.Column="1" CornerRadius="4" Padding="6,2" Margin="0,0,12,0"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StepType}" Value="Key">
                                        <Setter Property="Background" Value="#6366F1"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StepType}" Value="Delay">
                                        <Setter Property="Background" Value="#64748B"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding TypeLabel}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                    </Border>
                    <TextBlock Grid.Column="2" Text="{Binding Description}" FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="180"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu bar with subtle styling -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="0,0,0,1">
            <Menu Padding="8,4,12,4">
                <MenuItem Header="File" FontWeight="Normal">
                    <MenuItem Header="Import" Click="Import_OnClick"/>
                    <MenuItem Header="Export" Click="Export_OnClick"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="OnExit_OnClick"/>
                </MenuItem>
            </Menu>
        </Border>

        <!-- Action buttons -->
        <Border Grid.Row="1" Padding="20,16" Background="White" Margin="16,16,16,0"
                BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btn_start" Height="52" Content="{StaticResource PlayPauseBtnCollection}"
                        VerticalAlignment="Stretch" Margin="0,0,6,0" Grid.Column="0" Click="StartButton_Click"/>
                <Button x:Name="btn_playback" Height="52" Content="{StaticResource PlaybackBtnCollection}"
                        VerticalAlignment="Stretch" Margin="3,0" Grid.Column="1" Click="PlaybackButton_Click"/>
                <Button x:Name="btn_stop" Height="52" Content="{StaticResource StopBtnCollection}"
                        VerticalAlignment="Stretch" Margin="6,0,0,0" Grid.Column="2" Click="StopButton_Click"/>
            </Grid>
        </Border>

        <!-- Content card: How to use (when no steps) or Recorded steps list -->
        <Border Grid.Row="2" Margin="16,12,16,12" Padding="20,16"
                Background="White" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1"
                CornerRadius="10">
            <Grid>
                <!-- How to use – shown when there are no recorded steps -->
                <RichTextBox Visibility="{Binding HasRecordedSteps, Converter={StaticResource InverseBoolToVisibility}}"
                             BorderThickness="0" Background="Transparent" IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto" Padding="0">
                    <FlowDocument FontSize="13" TextAlignment="Left">
                        <Paragraph Margin="0,0,0,8" Foreground="{StaticResource TextPrimaryBrush}">
                            <Run FontWeight="SemiBold" Text="How to use:"/>
                        </Paragraph>
                        <Paragraph Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="• " Foreground="{StaticResource PrimaryBrush}"/> Start the recording by selecting the "Record" option.
                        </Paragraph>
                        <Paragraph Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="• " Foreground="{StaticResource PrimaryBrush}"/> Manually execute the desired steps within the application.
                        </Paragraph>
                        <Paragraph Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="• " Foreground="{StaticResource PrimaryBrush}"/> Conclude the recording by pressing <Bold>[ESC]</Bold>.
                        </Paragraph>
                        <Paragraph Margin="0,0,0,6" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="• " Foreground="{StaticResource PrimaryBrush}"/> Save the recorded steps via File → Export.
                        </Paragraph>
                        <Paragraph Margin="0,0,0,0" Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="• " Foreground="{StaticResource PrimaryBrush}"/> Use "Playback" to automatically reproduce the recorded actions.
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>

                <!-- Recorded steps – shown when recording has been stopped and steps exist -->
                <Grid Visibility="{Binding HasRecordedSteps, Converter={StaticResource BoolToVisibility}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,12">
                        <Run Text="Recorded steps"/>
                        <Run Text=" ("/>
                        <Run Text="{Binding RecordedStepsCount}"/>
                        <Run Text=")"/>
                    </TextBlock>
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                  MinHeight="120">
                        <ItemsControl ItemsSource="{Binding RecordedSteps}"
                                      ItemTemplate="{StaticResource RecordedStepTemplate}"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

        <!-- Status bar -->
        <Border Grid.Row="3" Padding="20,10" Background="White"
                BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1,1,0,0">
            <TextBlock x:Name="Status" Text="Press [ESC] to stop a recording session."
                        Foreground="{StaticResource TextSecondaryBrush}" FontSize="13"/>
        </Border>
    </Grid>
</Window>
