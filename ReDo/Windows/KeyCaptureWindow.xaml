<Window x:Class="ReDo.Windows.KeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change key" Width="320" Height="120" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="ToolWindow"
        KeyDown="Window_KeyDown">
    <Grid Margin="20">
        <TextBlock Text="Press the new key (Esc to cancel)" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="14" Foreground="#1E293B"/>
    </Grid>
</Window>
