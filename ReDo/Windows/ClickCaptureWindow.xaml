<Window x:Class="ReDo.Windows.ClickCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reselect position" WindowStyle="None" AllowsTransparency="True"
        Background="#40000000" Topmost="True" ShowInTaskbar="False"
        ResizeMode="NoResize" Cursor="Cross"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown">
    <Grid>
        <Border Background="Transparent"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="White"
                   Text="Click anywhere to set the new click position (Esc to cancel)"/>
    </Grid>
</Window>
